# Test 2 seed
# amitMREjMaV8wvj5RTjuSD5ksbjHnoXMaK89UjT9utZ5W6tE8N3UsZSVdeStYogWw93o88QnN3rMK68GK1KbhERzA5SRqEyrHM
# lodge erected logic giant hookup losing deftly unwind tomorrow richly elbow observant sizes erosion feel tadpoles intended cigar upwards does aerial tobacco bifocals cousin bifocals

function wallet1()
{
	rm -f ${dir}/t1.cache
	${dir}/build/Linux/master/release/bin/oscillate-wallet-cli --stagenet --daemon-address 127.0.0.1:28081 --wallet-file ${dir}/t1 --password ""
}

function wallet2()
{
	rm -f ${dir}/t2.cache
	${dir}/build/Linux/master/release/bin/oscillate-wallet-cli --stagenet --daemon-address 127.0.0.1:38081 --wallet-file ${dir}/t2 --password ""
}

function n1()
{
	${dir}/build/Linux/master/release/bin/oscillated --stagenet --data-dir ${datadir}/n1 --p2p-bind-port 28080 --rpc-bind-port 28081 --zmq-rpc-bind-port 28082 \
	--add-exclusive-node 127.0.0.1:58080 --add-exclusive-node 127.0.0.1:48080 --add-exclusive-node 127.0.0.1:38080 \
	--fixed-difficulty 1000 --block-sync-size 10
}

function n2()
{
	${dir}/build/Linux/master/release/bin/oscillated --stagenet --data-dir ${datadir}/n2 --p2p-bind-port 38080 --rpc-bind-port 38081 --zmq-rpc-bind-port 38082 --rpc-restricted-bind-port 38083 \
	--add-exclusive-node 127.0.0.1:58080 --add-exclusive-node 127.0.0.1:48080 --add-exclusive-node 127.0.0.1:28080 \
	--fixed-difficulty 1000 --block-sync-size 10
}

function n3()
{
	${dir}/build/Linux/master/release/bin/oscillated --stagenet --data-dir ${datadir}/n3 --p2p-bind-port 48080 --rpc-bind-port 48081 --zmq-rpc-bind-port 48082 --rpc-restricted-bind-port 48083 \
	--add-exclusive-node 127.0.0.1:58080 --add-exclusive-node 127.0.0.1:38080 --add-exclusive-node 127.0.0.1:28080 \
	--fixed-difficulty 1000 --block-sync-size 10
}

function n4()
{
	${dir}/build/Linux/master/release/bin/oscillated --stagenet --data-dir ${datadir}/n4 --p2p-bind-port 58080 --rpc-bind-port 58081 --zmq-rpc-bind-port 58082 --rpc-restricted-bind-port 58083 \
	--add-exclusive-node 127.0.0.1:48080 --add-exclusive-node 127.0.0.1:38080 --add-exclusive-node 127.0.0.1:28080 \
	--fixed-difficulty 1000 --block-sync-size 10
}

$1